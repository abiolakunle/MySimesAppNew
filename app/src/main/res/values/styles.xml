<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!--<style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">-->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="buttonStyle">@style/MyCustomButton</item>
        <item name="editTextStyle">@style/App_EditTextStyle</item>
        <item name="android:spinnerStyle">@style/holoSpinner</item>
    </style>

    <style name="MyCustomButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/rounded_box</item>
        <item name="android:textColor">#808080</item>
        <!--<item name="android:layout_height">45dip</item>-->
    </style>

    <style name="holoSpinner" parent="@android:style/Theme">
        <item name="android:background">@drawable/custom_spinner</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#959494</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingBottom">8dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:paddingLeft">12dip</item>
    </style>


</resources>
